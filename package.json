{
  "name": "learning-php-slim-vue",
  "description": "A tutorial project for a PHP Slim + Vue.js app.",
  "license": "GPL-3.0",
  "author": "cudacoder",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel watch slim",
    "slim": "set COMPOSE_CONVERT_WINDOWS_PATHS=1 && docker-compose up",
    "watch": "watchify -vd -p browserify-hmr -e src/frontend/main.js -o public/app.js",
    "build": "cross-env NODE_ENV=production browserify -g envify -e src/frontend/main.js | uglifyjs -c warnings=false -m > public/app.js"
  },
  "dependencies": {
    "vue": "^2.0.1",
    "axios": "^0.18.0",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.6",
    "envify": "^3.4.1",
    "http-server": "^0.11.1",
    "node-sass": "^4.13.1",
    "npm-run-all": "^2.1.2",
    "uglify-js": "^2.5.0",
    "vueify": "^9.1.0",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  }
}
